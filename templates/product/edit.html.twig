{% extends "base.html.twig" %}

{% block title %}
	Edition de :
	{{ product.name }}
{% endblock %}

{% block body %}

	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">{{ product.name }}</li>
	</ol>

	<h1>Editer le produit :{{ product.name }}</h1>

	{{ form_start(formView) }}

	{{ form_errors(formView) }}

	<div class="row">
		<div class="col">
			{{ form_row(formView.name) }}
			{{ form_row(formView.price) }}
		</div>
		<div class="col">
			{{ form_row(formView.mainPicture) }}
			{{ form_row(formView.category) }}
			{{ form_row(formView.shortDescription) }}
		</div>
	</div>

	<button type="submit" class="btn bnt-primary">
		<i class="fas fa-save"></i>
		cr√©er le produit
	</button>

	{{ form_end(formView) }}


{% endblock %}
