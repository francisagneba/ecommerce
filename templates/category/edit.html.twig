{% extends "base.html.twig" %}

{% block title %}
	Edition de :
	{{ category.name }}
{% endblock %}

{% block body %}

	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">{{ category.name }}</li>
	</ol>

	<h1>Editer la catégorie :{{ category.name }}</h1>

	{{ form_start(formView) }}

	{{ form_errors(formView) }}

	<div class="row">
		<div class="col">
			{{ form_row(formView.name) }}
		</div>
	</div>

	<button type="submit" class="btn bnt-primary">
		<i class="fas fa-save"></i>
		créer la categorie
	</button>

	{{ form_end(formView) }}


{% endblock %}
